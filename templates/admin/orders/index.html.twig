{% extends 'base.html.twig' %}

{% block title %}Manage Orders - Admin{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-cart-check"></i> Manage Orders</h1>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card mb-3">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a href="{{ path('app_admin_orders') }}" class="btn btn-outline-primary {% if not selectedStatus %}active{% endif %}">
                    All Orders
                </a>
                <a href="{{ path('app_admin_orders', {status: 'pending'}) }}" class="btn btn-outline-warning {% if selectedStatus == 'pending' %}active{% endif %}">
                    Pending
                </a>
                <a href="{{ path('app_admin_orders', {status: 'confirmed'}) }}" class="btn btn-outline-info {% if selectedStatus == 'confirmed' %}active{% endif %}">
                    Confirmed
                </a>
                <a href="{{ path('app_admin_orders', {status: 'preparing'}) }}" class="btn btn-outline-secondary {% if selectedStatus == 'preparing' %}active{% endif %}">
                    Preparing
                </a>
                <a href="{{ path('app_admin_orders', {status: 'delivered'}) }}" class="btn btn-outline-success {% if selectedStatus == 'delivered' %}active{% endif %}">
                    Delivered
                </a>
                <a href="{{ path('app_admin_orders', {status: 'cancelled'}) }}" class="btn btn-outline-danger {% if selectedStatus == 'cancelled' %}active{% endif %}">
                    Cancelled
                </a>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                        <tr>
                            <td><strong>#{{ order.id }}</strong></td>
                            <td>{{ order.user.firstName }} {{ order.user.lastName }}</td>
                            <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                            <td><strong>{{ order.totalAmount|number_format(2) }}</strong>DT</td>
                            <td>
                                {% set statusClass = {
                                    'pending': 'warning',
                                    'confirmed': 'info',
                                    'preparing': 'secondary',
                                    'ready': 'primary',
                                    'delivered': 'success',
                                    'cancelled': 'danger'
                                } %}
                                <span class="badge bg-{{ statusClass[order.status] ?? 'secondary' }}">
                                    {{ order.status|upper }}
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_admin_order_show', {id: order.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <form method="post" action="{{ path('app_admin_order_delete', {id: order.id}) }}" style="display: inline;" onsubmit="return confirm('Are you sure?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No orders found.
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <p class="text-muted">Total orders: {{ orders|length }}</p>
    </div>
</div>
{% endblock %}


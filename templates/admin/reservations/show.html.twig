{% extends 'base.html.twig' %}

{% block title %}Reservation #{{ reservation.id }} - Admin{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-calendar-event"></i> Reservation #{{ reservation.id }}</h1>
        <a href="{{ path('app_admin_reservations') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reservations
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Reservation Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Date & Time:</strong><br>{{ reservation.reservationDate|date('F d, Y H:i') }}</p>
                            <p><strong>Number of Guests:</strong><br>{{ reservation.numberOfGuests }}</p>
                            {% if reservation.tableNumber %}
                                <p><strong>Table Number:</strong><br>{{ reservation.tableNumber }}</p>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <p><strong>Status:</strong><br>
                                {% set statusClass = {
                                    'pending': 'warning',
                                    'confirmed': 'success',
                                    'cancelled': 'danger',
                                    'completed': 'secondary'
                                } %}
                                <span class="badge bg-{{ statusClass[reservation.status] ?? 'secondary' }}">
                                    {{ reservation.status|upper }}
                                </span>
                            </p>
                            <p><strong>Created:</strong><br>{{ reservation.createdAt|date('F d, Y H:i') }}</p>
                        </div>
                    </div>

                    {% if reservation.specialRequests %}
                        <hr>
                        <p><strong>Special Requests:</strong></p>
                        <div class="alert alert-info">
                            {{ reservation.specialRequests }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5><i class="bi bi-person"></i> Customer Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong><br>{{ reservation.user.firstName }} {{ reservation.user.lastName }}</p>
                    <p><strong>Email:</strong><br>{{ reservation.user.email }}</p>
                    {% if reservation.user.phone %}
                        <p><strong>Phone:</strong><br>{{ reservation.user.phone }}</p>
                    {% endif %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-gear"></i> Update Status</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('app_admin_reservation_status', {id: reservation.id}) }}">
                        <select name="status" class="form-select mb-2">
                            <option value="pending" {% if reservation.status == 'pending' %}selected{% endif %}>Pending</option>
                            <option value="confirmed" {% if reservation.status == 'confirmed' %}selected{% endif %}>Confirmed</option>
                            <option value="completed" {% if reservation.status == 'completed' %}selected{% endif %}>Completed</option>
                            <option value="cancelled" {% if reservation.status == 'cancelled' %}selected{% endif %}>Cancelled</option>
                        </select>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle"></i> Update Status
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}


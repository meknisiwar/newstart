{% extends 'base.html.twig' %}

{% block title %}User Details - Admin{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person-circle"></i> User Details</h1>
        <a href="{{ path('app_admin_users') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Users
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-person"></i> User Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> {{ user.id }}</p>
                    <p><strong>Name:</strong><br>{{ user.firstName }} {{ user.lastName }}</p>
                    <p><strong>Email:</strong><br>{{ user.email }}</p>
                    {% if user.phone %}
                        <p><strong>Phone:</strong><br>{{ user.phone }}</p>
                    {% endif %}
                    {% if user.address %}
                        <p><strong>Address:</strong><br>{{ user.address }}</p>
                    {% endif %}
                    <p><strong>Role:</strong><br>
                        {% if user.isAdmin() %}
                            <span class="badge bg-danger">
                                <i class="bi bi-shield-check"></i> ADMIN
                            </span>
                        {% else %}
                            <span class="badge bg-secondary">USER</span>
                        {% endif %}
                    </p>
                    <p><strong>Joined:</strong><br>{{ user.createdAt|date('F d, Y') }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5><i class="bi bi-cart-check"></i> Orders ({{ user.orders|length }})</h5>
                </div>
                <div class="card-body">
                    {% if user.orders|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for order in user.orders %}
                                    <tr>
                                        <td><a href="{{ path('app_admin_order_show', {id: order.id}) }}">#{{ order.id }}</a></td>
                                        <td>{{ order.createdAt|date('Y-m-d') }}</td>
                                        <td>${{ order.totalAmount|number_format(2) }}</td>
                                        <td><span class="badge bg-secondary">{{ order.status }}</span></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted">No orders yet.</p>
                    {% endif %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-calendar-check"></i> Reservations ({{ user.reservations|length }})</h5>
                </div>
                <div class="card-body">
                    {% if user.reservations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date & Time</th>
                                        <th>Guests</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for reservation in user.reservations %}
                                    <tr>
                                        <td><a href="{{ path('app_admin_reservation_show', {id: reservation.id}) }}">#{{ reservation.id }}</a></td>
                                        <td>{{ reservation.reservationDate|date('Y-m-d H:i') }}</td>
                                        <td>{{ reservation.numberOfGuests }}</td>
                                        <td><span class="badge bg-secondary">{{ reservation.status }}</span></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted">No reservations yet.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

